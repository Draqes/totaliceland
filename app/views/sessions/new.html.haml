= form_for(:session, :url => sessions_path) do |f|
  %fieldset
    %legend Sign In
    %p
      = f.label :email
      = f.text_field :email, :class => "text" 
    %p
      = f.label :password
      = f.text_field :password, :class => "text"
    %p
      = f.submit "Sign in"
    %p 
      New user? 
      = link_to "Sign up now!", signup_path

