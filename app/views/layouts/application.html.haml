!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(name="description" content="Total Iceland....")
    %meta(name="keywords" content="iceland")
    %title= title
    = csrf_meta_tag
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if lt IE 9]
      %script(src="http://html5shiv.googlecode.com/svn/trunk/html5.js")
    /[if lt IE 8]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
  %body
    %div{:id => "container"}
      %header
        %h1 Total Iceland
        /= image_tag("totaliceland.png")
        %nav
          %ul
            %li= link_to "Home", "#"
            %li= link_to "Sign In", "#"
            %li= link_to "About", "#"
      %section
        %div{:id => "sidebar"}
          %ul
            %li Sidebar Element 1
            %li Sidebar Element 2
        %div{:id => "content"}
          = yield
      %footer
        %p Total Iceland - Under development





